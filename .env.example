# ===========================================
# Environment Configuration for GS-CMS
# ===========================================
# Copy this file to .env.local for development
# Set these in Vercel dashboard for production
# ===========================================

# --------------------------------------------
# REQUIRED ENVIRONMENT VARIABLES
# --------------------------------------------

# Database Configuration
# Development (with Docker): postgresql://postgres:postgres@localhost:5432/gs_cms_v05?schema=public
# Development (no Docker): postgresql://user:password@localhost:5432/gs_cms_v05?schema=public
# Production: Use your production database URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gs_cms_v05?schema=public"

# Local Database Configuration (for backup/offline development)
# This is used by sync scripts to maintain a local copy of the database
LOCAL_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gs_cms_v05_dev?schema=public"

# NextAuth Configuration
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=svJiv6VX+xszAi+BOlAAdwPlWEwV4HWNDTxE5OKCOHE=

# Application URL (must match NEXTAUTH_URL)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --------------------------------------------
# OPTIONAL ENVIRONMENT VARIABLES
# --------------------------------------------

# Redis Configuration (Optional - falls back to in-memory if not configured)
# Option 1: Local Redis (Development with Docker)
REDIS_URL=redis://localhost:6379

# Option 2: Upstash Redis (Production/Development)
# Get your credentials from: https://console.upstash.com/
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Option 3: Alternative Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Email Configuration (Optional - logs to console if not configured)
# Gmail example (requires app password)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM="GS-CMS <noreply@gs-cms.com>"

# UploadThing Configuration (Required for file uploads)
# Get from: https://uploadthing.com/dashboard
UPLOADTHING_TOKEN=
UPLOADTHING_SECRET=

# WebSocket Configuration (Currently disabled)
# Will be implemented in future update
# NEXT_PUBLIC_WS_URL=ws://localhost:3000

# --------------------------------------------
# DEVELOPMENT-SPECIFIC VARIABLES
# --------------------------------------------

# Enable cron jobs in development (default: false)
ENABLE_CRON=false

# Seed database on first run (Docker only)
SEED_DATABASE=false

# Enable debug logging
DEBUG=false

# --------------------------------------------
# PRODUCTION-SPECIFIC VARIABLES (Set in Vercel)
# --------------------------------------------

# Node environment
# NODE_ENV=production

# Vercel-specific (automatically set)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=

# --------------------------------------------
# FEATURE FLAGS (Optional)
# --------------------------------------------

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# Enable maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false

# --------------------------------------------
# MONITORING & ANALYTICS (Optional)
# --------------------------------------------

# Sentry DSN for error tracking
# SENTRY_DSN=

# Analytics tracking ID
# NEXT_PUBLIC_ANALYTICS_ID=